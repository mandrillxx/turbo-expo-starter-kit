{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    },
    "strict": true,
    "jsx": "react-native",
    "types": [
      "nativewind/types"
    ],
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "nativewind-env.d.ts",
    "drizzle.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
